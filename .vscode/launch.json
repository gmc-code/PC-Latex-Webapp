{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask App (Debug)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}",
            "env": {
                "FLASK_APP": "app.app",  // Replace with your app filename if different
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--debug"
            ],
            "jinja": true,
            "console": "integratedTerminal"
        }
    ]
}
